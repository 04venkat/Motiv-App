<LoginScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "User Login"
            font_size: "30sp"
        TextInput:
            id: usr        
            hint_text: "Username"
            size_hint: (.2, None)
            height: 30
            multiline: False
        TextInput:
            id: pwd
            password: True
            hint_text: "Password"
            size_hint: (.2, None)
            height: 30
            multiline: False
        RelativeLayout:
            Button:
                text: "Login"
                size_hint: 0.3, 0.5
                on_press: root.login(root.ids.usr.text, root.ids.pwd.text)
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1
        Label:
            id: wrong
            text: ""
        RelativeLayout:
            Button:
                text: "New User? Sign Up"
                on_press: root.sign_up()
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign Up Page"
            font_size: "30sp"
        TextInput:
            id: username
            hint_text: "Username"
            size_hint: (.2, None)
            height: 30
            multiline: False
        TextInput:
            id: password
            password: True
            hint_text: "Password"
            size_hint: (.2, None)
            height: 30
            multiline: False
        Button: 
            text: "After clicking here, \nchoose your type below"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)
            size_hint: 0.3, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.5, 0.5, 1, 1
        GridLayout:
            cols:1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Choose your type:"
        GridLayout:
            cols: 3
            padding: 10, 10
            Button:
                text: "I Make \nThings \nHappen."
                on_press: root.make_motivate(root.ids.username.text)
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1
                
            Button:
                text: "I Watch \nThings \nHappen."
                on_press: root.watch_motivate(root.ids.username.text)
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1

            Button:
                text: "I Wait \nfor Things \nto Happen."
                on_press: root.wonder_motivate(root.ids.username.text)
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign Up Successful!"
        RelativeLayout:
            Button: 
                text: "Back to Login Screen"
                on_press: root.back_to_login()
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        RelativeLayout:
            Button:
                text: "Logout"
                on_press: root.log_out()
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1
        Label:
            id: motivate
            text: ""
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1] 
            
        RelativeLayout:
            Button: 
                text: "Motivate me"
                on_press: root.motivate()
                size_hint: 0.3, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.6}    
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.5, 0.5, 1, 1  

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "signup_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"